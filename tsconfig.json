{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "rootDir": "src",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": [
    "node_modules/*",
    ".vscode-test",
    "src/test",
    "webpack.config.ts"
  ]
}